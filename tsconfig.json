{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@components": ["components"],
      "@screens": ["screens"],
      "@data": ["data"],
      "@assets/*": ["assets/*"]
    }
  }
}
